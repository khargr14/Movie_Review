<div class="col-md-6 col-md-offset-3">
    <div class="edit-movie-form">

            <h1>Edit Movie</h1>

              <%= simple_form_for @movie do |f| %>

              <%= f.file_field :cover_picture %>
              <%= f.input :title, label: "Movie Title" %>
              <%= f.input :description %>
              <%= f.input :director %>
              <%= f.input :movie_length %>
              <%= f.button :submit %>
            <% end %>
    </div>
</div>